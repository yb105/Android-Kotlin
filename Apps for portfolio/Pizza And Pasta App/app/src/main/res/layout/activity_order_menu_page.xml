<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/ThemeColorMain"
    tools:context=".OrderMenuPage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Food Dash"
        android:textSize="35dp"
        android:textColor="@color/textcolor"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp"
        android:background="@color/ThemeColorSecondry">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grab Your Great Offers on Pizzas and Pastas"
            android:textColor="@color/textcolor"
            android:textSize="22dp"
            android:layout_marginRight="80dp"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:textStyle="bold"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="@color/ThemeColorSecondry"
            android:text="See Offers"
            android:background="@drawable/btndesign"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="90dp"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_marginRight="-80dp"
            android:layout_height="match_parent"
            android:src="@drawable/pizza"
            android:layout_gravity="end"/>

    </androidx.cardview.widget.CardView>


 <androidx.recyclerview.widget.RecyclerView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="20dp"
     android:id="@+id/recylerView"/>




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="45dp"
        android:backgroundTint="@color/ThemeColorSecondry"
        android:id="@+id/cardviewItem">


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin = "20dp"
            android:background="@drawable/btndesign"
            android:textStyle="bold"
            android:id="@+id/btnorderNow"
            android:textColor="@color/ThemeColorSecondry"
            android:text="Order Now"/>






    </androidx.cardview.widget.CardView>





</LinearLayout>